@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="listHeader"></div>

<div class="mainBody flex justify-content-center">
    <div class="todoBody p-4">
        <form id="account" method="post">
            <h2>Use a email account to log in.</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"/>
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe"/>
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Log in</button>
            </div>
        </form>
        <form id="test-account" method="post">
            <input asp-for="Input.Email" value="test@test.com" class="visually-hidden"/>
            <input asp-for="Input.Password" value="Testacc.1234" class="visually-hidden"/>
            <button id="login-submit-test" type="submit" class="w-100 btn btn-lg btn-warning mb-2">Log in as test account</button>
        </form>
        <div>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}